{% extends 'base.html.twig' %}

{% block title %}
	Mes adresses GREEN MIND
{% endblock %}

{% block content %}


	<a href="{{ path('account_adress_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
	<h1>Mes adresses
	</h1>

	Bienvenue
	{{ app.User.firstname }}
	dans votre compte,
	<br/>
	c'est dans cette espace que vous allez gerer toutes vos adresses.
	<br><br>
	<a href="{{ path('account')}}">Revenir a votre compte</a>
	<br>
	{% if app.user.adresses | length==0 %}
		<p class="text-center">
			Vous n'avez aucune adresse dans votre compte client pour en ajouter une veuillez
			<a href="{{ path('account_adress_add') }} ">cliquer ici</a>

		</p>
	{% else %}
		<div class="row">
			{% for adress in app.user.adresses %}

				<div class="col-md-4">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ adress.firstname}}</h5>
							<h5 class="card-title">{{ adress.lastname}}</h5>
							<p class="card-text">
                            {{ adress.adress}}, <br>
                            {{ adress.codepostal}} - {{ adress.city}} - {{ adress.country}}
                            </p>


							<a href="{{ path('account_adress_delete', {'id' : adress.id}) }}" class="btn btn-danger">Supprimer</a> | <a href=" {{path('account_adress_edit', {'id' : adress.id}) }}" class="btn btn-success">Modifier</a>
						</div>
					</div>
				</div>
			{% endfor %}


		</div>

	{% endif %}

{% endblock %}
